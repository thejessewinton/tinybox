{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist"]
    },
    "dev": {
      "cache": false
    },
    "start": {
      "cache": false
    },
    "clean": {}
  },
  "globalEnv": ["NODE_ENV", "NEXT_PUBLIC_URL"]
}
