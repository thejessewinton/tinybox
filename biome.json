{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["node_modules", "dist", ".next"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"a11y": {
				"noSvgWithoutTitle": {
					"level": "off"
				},
				"noAutofocus": {
					"level": "off"
				}
			},
			"style": {
				"useImportType": "warn",
				"noUnusedTemplateLiteral": {
					"level": "off"
				},
				"noNonNullAssertion": {
					"level": "off"
				}
			},
			"nursery": {
				"useSortedClasses": {
					"fix": "safe",
					"level": "warn",
					"options": {
						"attributes": ["className"]
					}
				}
			},
			"correctness": {
				"noUnusedVariables": {
					"level": "warn"
				},
				"noUnusedImports": {
					"level": "warn"
				}
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded"
		}
	}
}
